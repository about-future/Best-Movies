<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.future.bestmovies.DetailsActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/details_backdrop_iv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/movie_backdrop"
            android:scaleType="centerCrop"
            android:src="@drawable/backdrop"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient_grey"
            app:layout_constraintBottom_toBottomOf="@id/details_backdrop_iv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/middle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/details_vertical_spacing"
            android:layout_marginEnd="@dimen/details_horizontal_spacing"
            android:layout_marginStart="@dimen/details_horizontal_spacing"
            android:layout_marginTop="@dimen/details_vertical_spacing"
            app:layout_constraintTop_toBottomOf="@id/details_backdrop_iv">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/details_poster_iv"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/movie_poster"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/poster" />

                <TextView
                    android:id="@+id/details_title_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_horizontal_spacing"
                    android:layout_marginStart="@dimen/details_horizontal_spacing"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@android:color/white"
                    android:textSize="34sp"
                    app:layout_constraintLeft_toRightOf="@id/details_poster_iv"
                    app:layout_constraintStart_toEndOf="@id/details_poster_iv"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Movie Title" />

                <TextView
                    android:id="@+id/original_title_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/original_title_label"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/details_font_size"
                    app:layout_constraintLeft_toLeftOf="@id/details_title_tv"
                    app:layout_constraintStart_toStartOf="@id/details_title_tv"
                    app:layout_constraintTop_toBottomOf="@id/details_title_tv" />

                <View
                    android:id="@+id/separation_line1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/details_horizontal_spacing"
                    android:layout_marginStart="@dimen/details_horizontal_spacing"
                    android:layout_marginTop="@dimen/details_vertical_spacing"
                    android:background="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/details_poster_iv"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toEndOf="@id/details_poster_iv"
                    app:layout_constraintTop_toBottomOf="@id/original_title_label" />

                <TextView
                    android:id="@+id/details_plot_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_horizontal_spacing"
                    android:layout_marginStart="@dimen/details_horizontal_spacing"
                    android:layout_marginTop="@dimen/details_vertical_spacing"
                    android:text="@string/ratings_label"
                    android:textSize="@dimen/details_font_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/details_poster_iv"
                    app:layout_constraintTop_toBottomOf="@id/separation_line1"
                    tools:text="Plot" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

        <View
            android:id="@+id/separation_line2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/details_horizontal_spacing"
            android:layout_marginLeft="@dimen/details_horizontal_spacing"
            android:layout_marginRight="@dimen/details_horizontal_spacing"
            android:layout_marginStart="@dimen/details_horizontal_spacing"
            android:layout_marginTop="@dimen/details_vertical_spacing"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/middle_layout" />

        <TextView
            android:id="@+id/ratings_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/details_vertical_spacing"
            android:text="@string/ratings_label"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/details_font_size"
            app:layout_constraintLeft_toLeftOf="@id/separation_line2"
            app:layout_constraintStart_toStartOf="@id/separation_line2"
            app:layout_constraintTop_toBottomOf="@id/separation_line2" />

        <TextView
            android:id="@+id/details_ratings_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="@dimen/details_font_size"
            app:layout_constraintLeft_toRightOf="@id/ratings_label"
            app:layout_constraintStart_toEndOf="@id/ratings_label"
            app:layout_constraintTop_toTopOf="@id/ratings_label"
            tools:text="8.2" />

        <TextView
            android:id="@+id/release_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:paddingBottom="@dimen/details_vertical_spacing"
            android:text="@string/release_date_label"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/details_font_size"
            app:layout_constraintEnd_toStartOf="@id/details_release_date_tv"
            app:layout_constraintRight_toLeftOf="@+id/details_release_date_tv"
            app:layout_constraintTop_toTopOf="@id/details_ratings_tv" />

        <TextView
            android:id="@+id/details_release_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/details_vertical_spacing"
            android:layout_marginEnd="@dimen/details_horizontal_spacing"
            android:textSize="@dimen/details_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/release_date_label"
            tools:text="2018-02-20" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>