<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.future.bestmovies.DetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/details_vertical_spacing">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/movie_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants"
            android:visibility="visible">

            <ImageView
                android:id="@+id/details_backdrop_iv"
                android:layout_width="match_parent"
                android:layout_height="281dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/movie_backdrop"
                android:scaleType="centerCrop"
                android:src="@drawable/backdrop"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/gradient_grey"
                app:layout_constraintBottom_toBottomOf="@id/details_backdrop_iv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/details_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/details_horizontal_spacing"
                android:layout_marginStart="@dimen/details_horizontal_spacing"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@android:color/white"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_backdrop_iv"
                tools:text="Movie Title" />

            <TextView
                android:id="@+id/details_genre_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/details_horizontal_spacing"
                android:layout_marginStart="0dp"
                android:text="@string/genre_label"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/details_font_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/details_title_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@id/details_title_tv"
                app:layout_constraintTop_toBottomOf="@id/details_title_tv" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/poster_and_plot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/details_horizontal_spacing"
                android:layout_marginLeft="@dimen/details_horizontal_spacing"
                android:layout_marginRight="@dimen/details_horizontal_spacing"
                android:layout_marginStart="@dimen/details_horizontal_spacing"
                android:layout_marginTop="@dimen/details_vertical_spacing"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_genre_tv">

                <View
                    android:id="@+id/separation_line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/details_poster_iv"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/details_vertical_spacing"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/movie_poster"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="@id/separation_line3"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:src="@drawable/poster" />

                <TextView
                    android:id="@+id/details_plot_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:layout_marginStart="@dimen/details_horizontal_spacing"
                    android:layout_marginTop="@dimen/details_overview_top_spacing"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:textSize="@dimen/details_font_size"
                    app:layout_constraintTop_toTopOf="@id/separation_line3"
                    app:layout_constraintStart_toEndOf="@id/details_poster_iv"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Plot" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:id="@+id/separation_line4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginEnd="@dimen/details_horizontal_spacing"
                android:layout_marginStart="@dimen/details_horizontal_spacing"
                android:layout_marginTop="@dimen/details_vertical_spacing"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/poster_and_plot" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cast_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginTop="@dimen/details_vertical_spacing"
                android:layout_marginBottom="@dimen/details_vertical_spacing"
                android:layout_marginStart="@dimen/details_recycle_view_spacing"
                android:layout_marginEnd="@dimen/details_recycle_view_spacing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/separation_line4" />

            <include
                layout="@layout/ratings_release_date"
                android:id="@+id/ratings_and_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_vertical_spacing"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                app:layout_constraintTop_toBottomOf="@id/cast_rv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

