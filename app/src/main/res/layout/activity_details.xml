<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.future.bestmovies.DetailsActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/details_backdrop_iv"
            android:layout_width="match_parent"
            android:layout_height="281dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/backdrop" />

        <TextView
            android:id="@+id/details_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="34sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_backdrop_iv"
            tools:text="Movie Title" />

        <TextView
            android:id="@+id/original_title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/original_title_label"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/details_title_tv"
            app:layout_constraintStart_toStartOf="@id/details_title_tv"
            app:layout_constraintTop_toBottomOf="@id/details_title_tv" />

        <View
            android:id="@+id/separation_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/original_title_label" />

        <TextView
            android:id="@+id/ratings_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/ratings_label"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/separation_line"
            app:layout_constraintLeft_toLeftOf="@id/details_title_tv"
            app:layout_constraintStart_toStartOf="@id/details_title_tv"/>

        <TextView
            android:id="@+id/details_ratings_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            app:layout_constraintTop_toTopOf="@id/ratings_label"
            app:layout_constraintStart_toEndOf="@id/ratings_label"
            app:layout_constraintLeft_toRightOf="@id/ratings_label"
            tools:text="8.2" />

        <TextView
            android:id="@+id/release_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/release_date_label"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_constraintRight_toLeftOf="@+id/details_release_date_tv"
            app:layout_constraintEnd_toStartOf="@id/details_release_date_tv"
            app:layout_constraintTop_toTopOf="@id/details_ratings_tv" />

        <TextView
            android:id="@+id/details_release_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="@id/details_ratings_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="2018-02-20" />

        <View
            android:id="@+id/separation_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/details_ratings_tv" />

        <ImageView
            android:id="@+id/details_poster_iv"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/separation_line2"
            app:layout_constraintStart_toStartOf="@id/details_title_tv"
            app:layout_constraintLeft_toLeftOf="@id/details_title_tv"
            tools:src="@drawable/poster" />

        <TextView
            android:id="@+id/details_plot_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="top"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toRightOf="@id/details_poster_iv"
            app:layout_constraintTop_toBottomOf="@id/separation_line2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Plot" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>

