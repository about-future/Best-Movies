<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="196dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/details_recycle_view_spacing"
    android:paddingEnd="@dimen/details_recycle_view_spacing">

    <ImageView
        android:id="@+id/actor_profile_iv"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/poster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/movie_poster"/>

    <TextView
        android:id="@+id/actor_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/details_overview_font_size"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/actor_profile_iv"
        app:layout_constraintStart_toStartOf="@id/actor_profile_iv"
        app:layout_constraintTop_toBottomOf="@id/actor_profile_iv"
        tools:text="Name and Surname" />

</android.support.constraint.ConstraintLayout>